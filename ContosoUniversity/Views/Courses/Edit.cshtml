@model ContosoUniversity.Models.Course

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CourseID)
                <div class="form-group col-md-8 col-md-offset-2 border">
                    @Html.LabelFor(model => model.CourseID, new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.CourseID)
                    </div>
                </div>

                <div class="form-group col-md-8 col-md-offset-2">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-8 col-md-offset-2">
                    @Html.LabelFor(model => model.Credits, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Credits, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Credits, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-8 col-md-offset-2">
                    <label class="control-label col-md-3" for="DepartmentID">Department</label>
                    <div class="col-md-7">
                        @Html.DropDownList("DepartmentID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DepartmentID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        <input type="submit" value="Save" class="btn btn-default main-color-bg" />
                    </div>
                </div>
            </div>
        </div>
    </div>

   

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
