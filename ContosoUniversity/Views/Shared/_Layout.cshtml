                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div id="navbar" class="collapse navbar-collapse navbar-fixed-top">
                <ul class="nav navbar-nav">
                    <li><a href="/">Contoso Portal</a></li>
                    <li><a href="Home/About">About</a></li>
                    <li><a href="/Students">Student</a></li>
                    <li><a href="/Courses">Course</a></li>
                    <li><a href="/Lecturers">Lecturer</a></li>
                    <li><a href="/Departments">Department</a></li>
                </ul>

                <ul class="nav navbar-right navbar-nav">
                    <li><a href="profile.html">Welcome, Caleb!</a></li>
                    <li><a href="login.html">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <header id="header">
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>  @ViewBag.Title  <small>  Manage your site</small></h1>
                </div>
           </div>
        </div>
    </header>

   
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group ">
                        <a href="index.html" class="list-group-item active main-color-bg">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                        </a>
                        <a href="/Students" class="list-group-item"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> Student <span class="badge">@ViewBag.StudentCount</span></a>
                        <a href="/Courses" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Course <span class="badge">@ViewBag.CourseCount</span></a>
                        <a href="/Lecturers" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Lecturer <span class="badge">@ViewBag.LecturerCount</span></a>
                        <a href="/Departments" class="list-group-item"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Department <span class="badge">@ViewBag.DepartmentCount</span></a>
                    </div>
                    <div class="well">
                        <h4>Disk Space Used</h4>
                        <div class="progress ">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                60%
                            </div>
                        </div>
                        <h4>BandWidth Used</h4>
                        <div class="progress ">
                            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 42%;">
                                42%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-9">

